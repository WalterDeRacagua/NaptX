<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".view.main.MainActivity">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_koala"
        android:contentDescription="@string/logo_de_la_aplicaci_n"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Título (NaptX transacción siesta) -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/naptx"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        app:layout_constraintTop_toBottomOf="@+id/ivLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        />

    <!-- Subtitulo -->
    <TextView
        android:id="@+id/tvSubtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selecciona_tu_rol"
        android:textSize="16sp"
        android:textColor="@color/accent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        />

    <!-- Rol: Pagador -->
    <Button
        android:id="@+id/btnPagador"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pagador"
        android:textSize="18sp"
        android:paddingVertical="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSubtitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        />

    <!-- Rol: Receptor -->
    <Button
        android:id="@+id/btnReceptor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/receptor"
        android:textSize="18sp"
        android:paddingVertical="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnPagador"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        />

    <!-- Botón Sincronizar -->
    <Button
        android:id="@+id/btnSincronizar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sincronizar_con_blockchain"
        android:textSize="18sp"
        android:paddingVertical="16dp"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:layout_constraintTop_toBottomOf="@id/btnReceptor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Botón Mis Wallets -->
    <Button
        android:id="@+id/btnWallets"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/mis_wallets"
        android:textSize="18sp"
        android:paddingVertical="16dp"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:layout_constraintTop_toBottomOf="@id/btnSincronizar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Estado de conexión -->
    <TextView
        android:id="@+id/tvEstadoConexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/desconectado"
        android:textSize="14sp"
        android:textColor="@color/status_disconnected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>